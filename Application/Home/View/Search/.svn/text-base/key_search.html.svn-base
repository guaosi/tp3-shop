<script type="text/javascript">
    $(function () {
        //	最近浏览历史
        $.ajax({
            url:'__MODULE__/Goods/getHistory',
            type:'get',
            dataType:'json',
            success:function (data) {
                var newdata=eval(data);
                var str='';
                for(var i in newdata)
                {
                    str+="<dl><dt><a href='__MODULE__/Goods/goods/id/"+newdata[i]['id']+"'><img src='"+newdata[i]['mid_logo']+"' alt='' /></a></dt><dd><a href='__MODULE__/Goods/goods/id/"+newdata[i]['id']+"'>"+newdata[i]['goods_name']+"</a></dd></dl>";
                }
                $('#history_dl').append(str);
            }
        });
        $('#cleanhistory').on('click',function () {
            if(confirm('确定要清空浏览历史吗?'))
            {
                $.ajax({
                    url:'__CONTROLLER__/cleanHistory',
                    type:'get',
                    dataType:'json',
                    success:function (data) {
                        alert('清空成功');
                        location.reload();
                    }
                });
            }
        });
    })
</script>